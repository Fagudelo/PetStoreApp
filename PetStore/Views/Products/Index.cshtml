@model List<Product>
@{
}
    

<h2 class="text-center mb-5">Lista de productos</h2>

<div class="row mb-5">
    <div class="col">
        <a class="btn btn-primary" asp-controller="Products" asp-action="Create">Nuevo producto</a>
    </div>
    <div class="col">
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Marca</th>
            <th>Categoria</th>
            <th>Precio</th>
            <th>Imagen</th>
            <th>Creado</th>
            <th>Acción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Brand</td>
                <td>@product.Category</td>
                <td>@(product.Price)$</td>
                <td><img src="/products/@product.ImageFileName" width="100"/></td>
                <td>@product.CreatedAt.ToString("dd/MM/yyyy")</td>
                <td style="white-space:nowrap">
                    <a class="btn btn-primary" btn-sm asp-controller="Products" asp-action="Edit"
                    asp-route-id="@product.Id">Editar</a>
                    <a class="btn btn-danger" btn-sm asp-controller="Products" asp-action="Delete"
                    asp-route-id="@product.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>